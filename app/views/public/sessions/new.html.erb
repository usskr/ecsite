<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-8 mx-auto">
      <h2 class="text-center my-5">ログイン</h2>

      <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
        <div class="form-group row">
          <%= f.label :email, "メールアドレス", class: "col-sm-3" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-6" %>
        </div>

        <div class="form-group row">
          <%= f.label :password, "パスワード", class: "col-sm-3" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-6" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group text-center">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="form-group text-center">
          <%= f.submit "ログイン", class: "btn btn-success" %><br>
          <%= render "public/shared/links" %>
        </div>
      <% end %>

    </div>
  </div>
</div>