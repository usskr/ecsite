<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-8 mx-auto">
      <h2 class="text-center my-5">ジャンル一覧・追加</h2>
      <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
        <%= f.label :name, "ジャンル名" %> <%= f.text_field :name, autofocus: true, :placeholder =>"ジャンル名" %>
        <%= f.submit "新規登録", class: "btn btn-success" %>
      <% end %>
      <table class="table mt-5">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
			  <tbody>
				  <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>