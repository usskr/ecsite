<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-8 mx-auto">
      <h2 class="text-center my-5">ジャンル編集</h2>
      <%= form_with model: @genre, url: admin_genre_path(@genre), local: true do |f| %>
        <%= f.label :name, "ジャンル名" %> <%= f.text_field :name, autofocus: true, :placeholder =>"ジャンル名" %>
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>